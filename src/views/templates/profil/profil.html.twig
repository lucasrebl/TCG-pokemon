{% endblock %}

{% block header %}
	<h3>test profil</h3>
{% endblock %}

{% block body %}
{% include 'header.html.twig' %}
<form action="/" method="post">
    <input type="submit" name="logOut" value="LogOut">
</form>

<div class="test">
    {% for packs in readPacksName %}
    {% if pack.isOpen == 0 %}
    <div class="test2">
        <form action="/profil" method="post">
            <input type="hidden" name="pack_name" value="{{ packs.name }}">
            <button type="submit" name="open_pack">{{ packs.name }}</button>
        </form>
    </div>
    {% endif %}
    {% endfor %}

    {% for collection in displayCard %}
        <p>{{ collection.idCard }}</p>
        <img src="{{ collection.small_image_url }}" alt="Card Image">
    {% endfor %}
</div>
{% endblock %}

