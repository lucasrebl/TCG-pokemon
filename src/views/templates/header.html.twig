{% block content %}

<header>
    <a href="/" style="text-decoration: none; color: inherit;">
        <h3>TCG Pokemon</h3>
    </a>
    <div class="buttons">
        {% if isConnected %}
        <a href="/profil"><button>profil</button></a>
        <a href="/shop">Shop</a>
        <form action="/" method="post">
            <button type="submit" name="logOut" class="buttons__button">LogOut</button>
        </form>
        {% else %}
        <a href="/register"><button>register</button></a>
        <a href="/login"><button>login</button></a>
        {%endif%}
    </div>
</header>
{% endblock %}